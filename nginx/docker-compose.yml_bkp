version: "3.3"

services:
  nginx:
    build: 
      context: .
    ports:
      - 8080:80
    volumes:
        - ./html/:/usr/share/nginx/html/
        - ./conf.d/:/etc/nginx/conf.d/
  dns:
   build:
     context: ./dns/
   restart: always
   ports: 
     - 53:53
     - 53:53/udp
   volumes:
     - ./dns/named.conf:/etc/bind/named.conf
     - ./dns/zone/:/etc/bind/zone
   command: named -c /etc/bind/named.conf -g -u named
    
    

